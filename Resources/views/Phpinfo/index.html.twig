{% for name, section in phpinfo %}
        <h3>{{ name|raw }}</h3>
        <table class="table table-striped table-hover">
        {% for key, val in section %}
            {% if val is iterable %}
                <tr>
                    <td>{{ key|raw }}</td>
                    {% for subval in val %}
                        <td>{{ subval|raw }}</td>
                    {% endfor %}
                </tr>    
            {% elseif key is not iterable %}
                <tr>
                    <td>{{ key|raw }}</td>
                    <td>{{ val|raw }}</td>
                </tr>
            {% else %}
                <tr>
                    <td>{{ val|raw }}</td>
                </tr>
            {% endif %}
        {% endfor %}
        </table>
{% endfor %}

