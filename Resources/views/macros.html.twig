{% macro address(class='',www=false) %}
    {% import _self as macros %}
    {{ macros.addressStreet(class) }}
    {{ macros.addressPhone(class,www) }}
{% endmacro %}
{% macro yt_video(id) %}
<div class="flex-video widescreen" style="margin: 0 auto;text-align:center;">
    <iframe src="//www.youtube-nocookie.com/embed/{{ id }}?rel=0&amp;wmode=opaque&amp;feature=player_embedded" style="border: 0px;" allowfullscreen></iframe>
</div>
{% endmacro %}

{% macro addressPhone(class='',www=false) %}
    <address class="{{ class|default('') }}">
        <abbr title="phone"><i class="fa fa-phone"></i></abbr> {{ c33s_core_config.contact.phone }}<br>
        <abbr title="fax"><i class="fa fa-print"></i></abbr> {{ c33s_core_config.contact.fax }}<br>
        <abbr title="email"><i class="fa fa-envelope"></i></abbr> <a href="mailto:{{ c33s_core_config.contact.mail|lower }}">{{ c33s_core_config.contact.mail|lower }}</a>
        {% if www|default(false) == true %}<br><abbr title="webpage"><i class="fa fa-link"></i></abbr> {{ c33s_core_config.contact.www }}{% endif %}
    </address>
{% endmacro %}

{% macro addressStreet(class='') %}
    <address class="{{ class|default('') }}">
        {{ c33s_core_config.contact.street }}<br>
        {{ c33s_core_config.contact.zip }} {{ c33s_core_config.contact.city }}, {{ c33s_core_config.contact.country }}
    </address>
{% endmacro %}
