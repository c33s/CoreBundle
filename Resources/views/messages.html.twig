{% for type, messages in app.session.flashbag.all() %}
    {% if (type == 'error') %}
        {% set bootstrap_type = 'error' %}
    {% elseif (type == 'danger')%}
        {% set bootstrap_type = 'danger' %}
    {% elseif type == 'success'%}
        {% set bootstrap_type = 'success' %}
    {% elseif (type == 'info' or type == 'notice')%}
        {% set bootstrap_type = 'info' %}
    {% elseif (type == 'lert-block')%}
        {% set bootstrap_type = 'alert-block' %}
    {% else %}
        {% set bootstrap_type = 'error' %}
    {% endif %}

    {% for key, message in messages %}
        <div class="alert alert-{{bootstrap_type}}">
            <button class="close" data-dismiss="alert">Ã—</button>
                <strong>{{ type }}</strong>
                {{ message |trans }}
        </div>
    {% endfor %}
{% endfor %}
