<?xml version="1.0" encoding="UTF-8"?>
<database name="default" namespace="{{ name.camelcase }}\ModelBundle\Model" defaultIdMethod="native">
    <behavior name="query_cache">
        <parameter name="lifetime" value="600" />
    </behavior>
    <!-- key value storage -->
    <table name="storage">
        <behavior name="auto_add_pk" />
        <behavior name="timestampable" />

        <column name="key" type="varchar" size="50" />
        <column name="value" type="longvarchar" primaryString="1" />
        <column name="description" type="varchar" size="255" />
    </table>
    <table name="news">
        <behavior name="auto_add_pk" />
        <behavior name="timestampable" />

        <column name="headline" type="varchar" size="50" />
        <column name="sub_headline" type="longvarchar" primaryString="1" />
        <column name="body" type="varchar" size="255" />
        <column name="image" type="varchar" size="255" />
    </table>
    <table name="link">
        <behavior name="auto_add_pk" />
        <behavior name="timestampable" />
        <behavior name="publishable" />

        <column name="name" type="varchar" size="255" primaryString="1" />
        <column name="link" type="varchar" size="255"  />
        <column name="picture" type="varchar" size="255" />
    </table>
</database>
