# Assetic Configuration
assetic:
    bundles:        [ 'C33sCoreBundle', {% for asseticBundle in asseticBundles %}'{{ name.camelcase }}{{ asseticBundle }}Bundle',{% endfor %} 'AvocodeFormExtensionsBundle' ]
    filters:
        cssrewrite: ~
        lessphp:
            paths:
                # @bundle notation does not work here
                - '%kernel.root_dir%/../src/{{ name.camelcase }}/AdminBundle/Resources/non-public/less/'
                - '%kernel.root_dir%/../src/{{ name.camelcase }}/WebpageBundle/Resources/non-public/less/'
                - '%kernel.root_dir%/../src/'
                - '%kernel.root_dir%/../vendor/'
                - '%kernel.root_dir%/../'
