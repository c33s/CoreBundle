{% verbatim %}
{% macro static(name,subfolder=false,prefix='{% endverbatim %}{{ name.underscore }}{% verbatim %}_{% endverbatim %}{{ bundlename | underscore }}{% verbatim %}_',route='static') %}
{% if subfolder == false %}{{ path('{% endverbatim %}{{ name.underscore }}{% verbatim %}_{% endverbatim %}{{ bundlename | underscore }}{% verbatim %}_static', { name: name }) }}{% else %}{{ path('{% endverbatim %}{{ name.underscore }}{% verbatim %}_{% endverbatim %}{{ bundlename | underscore }}{% verbatim %}_static_subfolder', { name: name, subfolder: subfolder }) }}{% endif %}
{% endmacro %}

{% macro isActive(name,prefix='{% endverbatim %}{{ name.underscore }}{% verbatim %}_{% endverbatim %}{{ bundlename | underscore }}{% verbatim %}_',route) %}
    {% set _route = app.request.get('_route') %}
    {% set _name = app.request.get('name') %}
    {% set _subfolder = app.request.get('subfolder') %}

    {% if name == 'home' %}
        {% if _route == '{% endverbatim %}{{ name.underscore }}{% verbatim %}_{% endverbatim %}{{ bundlename | underscore }}{% verbatim %}_default_homepage' %}active{% endif %}
    {% elseif name == 'about-us' %}
        {% if _route == '{% endverbatim %}{{ name.underscore }}{% verbatim %}_{% endverbatim %}{{ bundlename | underscore }}{% verbatim %}_team_index' %}active
        {% elseif _route == '{% endverbatim %}{{ name.underscore }}{% verbatim %}_{% endverbatim %}{{ bundlename | underscore }}{% verbatim %}_static_subfolder' and _subfolder == 'ueber-uns' and _name == 'praxis' %}active
        {% elseif _route == '{% endverbatim %}{{ name.underscore }}{% verbatim %}_{% endverbatim %}{{ bundlename | underscore }}{% verbatim %}_static_subfolder' and _subfolder == 'ueber-uns' and _name == 'videos' %}active
        {% endif %}
    {% elseif name == 'services' %}
        {% if _route == '{% endverbatim %}{{ name.underscore }}{% verbatim %}_{% endverbatim %}{{ bundlename | underscore }}{% verbatim %}_services_index' %}active{% endif %}
    {% elseif name == 'information' %}
        {% if _route == '{% endverbatim %}{{ name.underscore }}{% verbatim %}_{% endverbatim %}{{ bundlename | underscore }}{% verbatim %}_information_index' %}active
        {% elseif _route == '{% endverbatim %}{{ name.underscore }}{% verbatim %}_{% endverbatim %}{{ bundlename | underscore }}{% verbatim %}_faq_index' %}active
        {% elseif _route == '{% endverbatim %}{{ name.underscore }}{% verbatim %}_{% endverbatim %}{{ bundlename | underscore }}{% verbatim %}_terms_index' %}active
        {% elseif _route == '{% endverbatim %}{{ name.underscore }}{% verbatim %}_{% endverbatim %}{{ bundlename | underscore }}{% verbatim %}_static_subfolder' and _subfolder == 'informationen' and _name == 'meinarzt-app' %}active
        {#% elseif _route == '' %}active{% endif %#}
        {% endif %}
    {% elseif name == 'contact' %}
        {% if _route == '{% endverbatim %}{{ name.underscore }}{% verbatim %}_{% endverbatim %}{{ bundlename | underscore }}{% verbatim %}_static' and  _name == 'kontakt' %}active
        {% elseif _route == '{% endverbatim %}{{ name.underscore }}{% verbatim %}_{% endverbatim %}{{ bundlename | underscore }}{% verbatim %}_static' and  _name == 'termine' %}active
        {% elseif _route == '{% endverbatim %}{{ name.underscore }}{% verbatim %}_{% endverbatim %}{{ bundlename | underscore }}{% verbatim %}_static_subfolder' and _subfolder == 'contact' and _name == 'anfahrt' %}active
        {% elseif _route == '{% endverbatim %}{{ name.underscore }}{% verbatim %}_{% endverbatim %}{{ bundlename | underscore }}{% verbatim %}_static' and  _name == 'impressum' %}active{% endif %}
    {% endif %}
{% endmacro %}
{% endverbatim %}