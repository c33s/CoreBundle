@font-face {
  font-family: '@{fontAwesomeFamilyName}';
  src: url('@{fontAwesomePath}/@{fontAwesomeName}.eot?v=@{fontAwesomeVersion}');
  src: url('@{fontAwesomePath}/@{fontAwesomeName}.eot?#iefix&v=@{fontAwesomeVersion}') format('embedded-opentype'), 
  url('@{fontAwesomePath}/@{fontAwesomeName}.woff?v=@{fontAwesomeVersion}') format('woff'), 
  url('@{fontAwesomePath}/@{fontAwesomeName}.ttf?v=@{fontAwesomeVersion}') format('truetype'), 
  url('@{fontAwesomePath}/@{fontAwesomeName}.svg?v=@{fontAwesomeVersion}#fontawesomeregular') format('svg');
  font-weight: normal;
  font-style: normal;
}

h1, h2, h3, h4
{
  font-family: @fontFamily;
  text-transform:uppercase;
  font-weight: normal;
}

.navbar
{
  font-family: @fontFamily;
}