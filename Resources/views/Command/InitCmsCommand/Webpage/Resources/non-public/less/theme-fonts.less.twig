@fontName: 'BebasNeue-webfont';
@fontFamilyName: 'bebas_neueregular';
@fontFamily: '@{fontFamilyName}', Arial, sans-serif;
@fontPath: "@{{ name.camelcase }}{{ bundlename | camelcase }}Bundle/fonts/bebas";

@fontAwesomeName: fontawesome-webfont;
@fontAwesomeFamilyName: FontAwesome;
