{% if parameters.users is defined %}
    <li class="dropdown" data-dropdown="dropdown2">
        <a data-toggle="dropdown" class="dropdown-toggle" role="button" id="drop3" href="#"><i class="icon-user"></i> Switch User<b class="caret"></b></a>
        <ul class="dropdown-menu">
        {% for user in parameters.users %}
            {% if user.username != parameters.original_user.username and user.username != parameters.current_user.username %}
            <li><a href="?_switch_user={{ user.username }}">{{ user.username }}</a></li>
            {% endif %}
        {% endfor %}
            <li class="divider"></li>
            <li><a href="?_switch_user=_exit">exit back to user {{ parameters.original_user.username }}</a></li>
        </ul>
    </li>
{% endif %}
